<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textColor">@color/ArticleTitleTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="detailsTextStyle">
        <item name="android:textColor">@color/ArticleDetailsTextColor</item>
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
